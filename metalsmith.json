{
  "source": "./contents",
  "metadata": {
    "title": "My Wintersmith-Powered Blog",
    "description": "My second, super-cool, Wintersmith-powered blog."
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title",
      "relative": false
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "outputDir": "./build/css/",
      "basePath": "./sass"
    },
    "metalsmith-collections": {
      "articles": {
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-writemetadata": {
      "pattern": ["*.md", "*.html"]
    }
  }
}